#:kivy 2.0.0
#:import C kivy.utils.get_color_from_hex

<LineWidthButton@ColorButton>:
    group:
        "line_width"
    on_release:
        app.canvas_widget.set_line_width(self.text)
    color:
        C("#2C3E50")
    background_color:
        C("#ECF0F1")

# Rule for color buttons
<ColorButton@RadioButton>:
    group: "color"
    on_release:
        app.canvas_widget.set_color(self.background_color)
    background_normal:
        "../img/color_button_normal.png"
    background_down:
        "../img/color_button_down.png"
    border:
        # The smaller the border, smaller the button.
        3, 3, 3, 3

# Root's rule.
<CanvasWidget>:
    Button:
        text: "Delete"
        right: root.right
        top: root.top
        size: 80, 40
        on_release:
            root.clear_canvas()

    BoxLayout:
        orientation: "horizontal"
        padding: 3
        spacing: 3
        xy: 0,0
        size: root.width, 40

        # Default color.
        ColorButton:
            background_color:
                C("#2980B9")
            state: "down"

        ColorButton:
            background_color:
                C("#16A085")
        
        ColorButton:
            background_color:
                C("#27AE60")

    BoxLayout:
        orientation: "vertical"
        padding: 2
        spacing: 2
        x: 0
        top: root.top
        size: 80, 110

        LineWidthButton:
            text: "Thin"
        
        LineWidthButton:
            text: "Normal"
            state: "down"
        
        LineWidthButton:
            text: "Thick"